@model PrimeiroProjeto.Models.Entidades.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeUsuario)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.Tipo)*@

            @if (Model.Tipo == 1)
            {
                <label>Administrador</label>
            }
            else
               if (Model.Tipo == 2)
            {
                <label>Técnico</label>
            }
            else
               if (Model.Tipo == 3)
            {
                <label>Usuário Normal</label>
            }

        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">Voltar para listagem</a>
    </form>
</div>
