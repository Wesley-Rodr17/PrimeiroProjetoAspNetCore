@model PrimeiroProjeto.Models.Entidades.Usuario

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes do usuário</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd>
            @if (Model.Tipo == 1)
            {
                <label>Administrador</label>
            }
            else
               if (Model.Tipo == 2)
            {
                <label>Técnico</label>
            }
            else
               if (Model.Tipo == 3)
            {
                <label>Usuário Normal</label>
            }

        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index" class="btn btn-light">Voltar para listagem</a>
</div>

